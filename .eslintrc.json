{
    "env": {
        "node": true,
        "commonjs": true,
        "es6": true
    },
    "extends": [
        "eslint:recommended"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "rules": {
        "no-var": "warn",
        "prefer-const": "warn",
        "no-unused-vars": "warn",
        "no-trailing-spaces": "warn",
        "semi": "error",
        "quotes": [2, "single"],
        "indent": ["error", 2, { "SwitchCase": 1 }],
        "camelcase": [2, {"properties": "always"}]
    }
}